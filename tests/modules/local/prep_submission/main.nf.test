                biosample = true
                species = "virus"
                submission_mode = "ftp"
                output_dir = "${outputDir}" // (?: what does this NF variable resolve to?  surely not $params.output_dir?)
                metadata_basename = "mpxv_test_metadata" // (?: is this taking the place of my global variable?)
